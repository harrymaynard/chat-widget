{
  "compilerOptions": {
    "target": "es2018",
    "module": "es2020",
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "common": ["./common/src"],
      "common/*": ["./common/src/*"]
    }
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
